<!DOCTYPE html>
<html lang="en">

    <head>
        <% include ../layouts/head %>
    </head>

    <body>

        <div id="wrapper">
            <% include ../layouts/header %>
            <div class="adminbar">
                <div class="toggle-icon-holder"><i class="fa fa-bars fa-2 menu-toggle" aria-hidden="true" id="menu-toggle"></i></div>
                <div class="user-holder">Hi, <%= locals.user.username %></div>
            </div>
            <!-- Page Content -->
            <div id="page-content-wrapper" ng-app="uom">
                <div class="container-fluid" ng-controller="uomCtrl">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2>Unit Of Mesurements</h2>
                            <% if(errors){ %>
                            <% for(var i=0; i<errors.length; i++) { %>
                            <div class="alert alert-danger"><%= errors[i].msg %><i class="fa fa-times pull-right btn-close-error" aria-hidden="true"></i></div>
                            <% } %>
                            <% } %>
                            <!-- Trigger the modal with a button -->
                            <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#myModal">Add New UOM</button>
                            <div class="table-comtainer">
                                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Unit Name</th>
                                            <th style="width:10%;"></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Unit Name</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% if(uoms.length > 0){ %>
                                        <% for(var i=0; i<uoms.length; i++) { %>
                                        <tr>
                                            <td><%= uoms[i].unit %></td>
                                            <td style="text-align:center;">
                                                <i class="fa fa-pencil btn btn-primary" ng-click="bindEditForm('<%= uoms[i]._id %>','<%= uoms[i].unit %>')" aria-hidden="true" data-toggle="modal" data-target="#editModal"></i>&nbsp;
                                                <i class="fa fa-trash-o btn btn-danger" ng-click="conformDelete('<%= uoms[i]._id %>')" aria-hidden="true" data-toggle="modal" data-target="#deleteModal"></i>
                                            </td>
                                        </tr>
                                        <% } %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- Modal -->
                            <div id="myModal" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <form action="/items/uom" method="post">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Add New Unit</h4>
                                            </div>
                                            <div class="modal-body">

                                                <div class="form-group">
                                                    <label for="name">Unit Name</label>
                                                    <input type="text" class="form-control" id="name" name="name" placeholder="Unit Name">
                                                </div>

                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-default">Submit</button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                            <!-- Edit Modal -->
                            <div id="editModal" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <form action="{{action}}" method="post">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Update Unit</h4>
                                            </div>
                                            <div class="modal-body">
                                            <input type="hidden" name="action" value="edit">
                                                <div class="form-group">
                                                    <label for="name">Unit Name</label>
                                                    <input type="text" class="form-control" ng-model="cat_name" id="name" name="name" placeholder="Categoy Name">
                                                </div>

                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-default">Update</button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                            <!-- Delete Modal -->
                            <div id="deleteModal" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <form action="{{action}}" method="post">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Delete Unit</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <h2>Are you sure want to delete?</h2>
                                                    <input type="hidden" name="action" value="delete">
                                                </div>

                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->

        <% include ../layouts/foot %>
        <script type="text/javascript" src="/javascripts/uom.js"></script>
    </body>

</html>

